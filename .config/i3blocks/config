# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# Change $SCRIPT_DIR to the location of your scripts!
command=~/scripts/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[bitcoin]
interval=120
color=#f2a900

[disk]
command=~/scripts/i3blocks/disk -f "  {used} / {total} {tunit}iB ({pused}%)" -tc '{pfree}' '<' 20 -tc '{pfree}' '<' 10
instance=/
interval=10

[disk]
command=~/scripts/i3blocks/disk -f "  {used} / {total} {tunit}iB ({pused}%)" -tc '{pfree}' '<' 20 -tc '{pfree}' '<' 10
instance=/home
interval=10

[memory]
label=  
interval=5

[cpu]
label=  
interval=5

[volume-pipewire]
interval=once
signal=1
LONG_FORMAT="${SYMB}${VOL}%"

[iface]
label= 
IFACE=wlp4s0
BLOCK_BUTTON=1
color=#00cc00
display_wifi_name=1
interval=5

[systemd_unit]
instance=iptables
markup=pango
label=  iptables: 
interval=once
UNIT_NAME=iptables.service
ACTIVE_COLOR=green
INACTIVE_COLOR=orange
FAILED_COLOR=red

[battery2]
markup=pango
interval=10

[date]
TZ=America/Argentina/Buenos_Aires
command=echo "  $(date +'%A %d/%m/%Y')"
interval=600

[time]
TZ=America/Argentina/Buenos_Aires
command=echo "  $(date +%T)"
interval=5
